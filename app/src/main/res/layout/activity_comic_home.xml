<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.awesoman.owo2_comic.view.MainViewPager
        android:id="@+id/myViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></com.example.awesoman.owo2_comic.view.MainViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0">

        <LinearLayout
            android:id="@+id/btn1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon1"
                android:background="@drawable/bookrack_icon_select"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/pageTxt1"
                style="@style/HomeViewPagerBtnFontStyle"
                android:textColor="@color/red"
                android:text="书架" />
            </LinearLayout>

        <LinearLayout
            android:id="@+id/btn2"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon2"
                android:background="@drawable/comic_online_icon"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/pageTxt2"
                style="@style/HomeViewPagerBtnFontStyle"
                android:text="漫画" />
            </LinearLayout>

        <LinearLayout
            android:id="@+id/btn3"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon3"
                android:background="@drawable/music_icon"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/pageTxt3"
                style="@style/HomeViewPagerBtnFontStyle"
                android:text="音乐" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn4"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon4"
                android:background="@drawable/more_select_setting"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/pageTxt4"
                style="@style/HomeViewPagerBtnFontStyle"
                android:text="设置" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
