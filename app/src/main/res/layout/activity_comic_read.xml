<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <com.example.awesoman.owo2_comic.module.MyViewPager
        android:id="@+id/vp_read"
        android:layout_marginTop="@dimen/read_margin_top"
        android:layout_marginBottom="@dimen/read_margin_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></com.example.awesoman.owo2_comic.module.MyViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:id="@+id/titleLinear"
            android:visibility="invisible">
            <include layout="@layout/title_layout"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/moreSelectLinear"
            android:background="@color/blackAlpha"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible">
            <include layout="@layout/more_select_layout"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
